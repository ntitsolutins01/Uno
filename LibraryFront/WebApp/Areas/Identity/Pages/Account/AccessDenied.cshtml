@page

@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "_LayoutLogin";
}
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="~/assets/images/logo.png" height="94" alt="Library SoftDesign" />
        </a>
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i>Acesso Negado</h2>
            </div>
            <div class="panel-body">
                <section class="card mb-4">
                    <div class="card-body  text-center">
                        <img src="~/assets/images/erro-403.jpg" />
                    </div>
                </section>
                <div class="alert alert-danger">
                    <p class="m-0">Acesso negado. Por favor <a asp-page="./Login">Clique aqui para efetuar login</a>.</p>
                </div>
            </div>
        </div>
        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2024. Todos os direitos reservados.</p>
    </div>
</section>

@section Scripts {
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/js/login.js"></script>
}
