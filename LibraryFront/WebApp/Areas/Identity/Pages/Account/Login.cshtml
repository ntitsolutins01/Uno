@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

<section class="body-sign">
	<div class="center-sign">
		<a href="/" class="logo pull-left">
			<img src="~/assets/images/logo.png" height="94" alt="Library SoftDesign" />
		</a>
		<div class="panel panel-sign">
			<div class="panel-title-sign mt-xl text-right">
				<h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Sign In</h2>
			</div>
			<div class="panel-body">
				<form method="post" asp-route-returnUrl="@Model.ReturnUrl" autocomplete="off" id="form">
					@if (Request.HasFormContentType && Request.Form.Keys.Any())
					{
						<div asp-validation-summary="All" class="alert alert-mini alert-danger margin-bottom-30"></div>
					}
					<div class="form-group mb-lg">
						<label>Username</label>
						<div class="input-group input-group-icon">
							<input asp-for="Login.Email" type="text" class="form-control form-control-lg" />
							<span class="input-group-addon">
								<span class="icon icon-lg">
									<i class="fa fa-user"></i>
								</span>
							</span>
						</div>
					</div>

					<div class="form-group mb-lg">
						<div class="clearfix">
							<label class="pull-left">Password</label>
						</div>
						<div class="input-group input-group-icon">
							<input asp-for="Login.Password" type="password" class="form-control form-control-lg"/>
							<span class="input-group-addon">
								<span class="icon icon-lg">
									<i class="fa fa-lock"></i>
								</span>
							</span>
						</div>
					</div>

					<div class="row">
						<div class="col-sm-8">
							&nbsp;&nbsp;
						</div>
						<div class="col-sm-4 text-right">
							<button type="submit" class="btn btn-primary">Sign in</button>
						</div>
					</div>
				</form>
			</div>
		</div>
		<p class="text-center text-muted mt-md mb-md">&copy; Copyright 2025. Todos os direitos reservados.</p>
	</div>
</section>

@section Scripts {
	<script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
	<script src="~/js/login.js"></script>
}
