@page
@model WebApp.Areas.Identity.Pages.Account.Manage.FirstAccessPasswordModel
@{
    ViewData["Title"] = "Primeiro acesso";
    Layout = "_LayoutLogin";
}


<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="~/assets/images/logo.png" height="94" alt="Library SoftDesign" />
        </a>
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Primeiro acesso</h2>
            </div>
            <div class="panel-body">
                <div class="alert alert-warning">
                    <p class="m-0">Seja bem vindo ao sistema Library Brasil! Para utilizar o sistema configure sua nova senha de acesso abaixo!</p>
                </div>
                <div class="alert alert-success">
                    <p class="m-0">Após alterar sua senha acesse o sistema Library Brasil com seu usuário e senha!</p>
                </div>
                <form method="post" autocomplete="off" id="form">
                    @if (Request.HasFormContentType)
                    {
                        <div asp-validation-summary="All" class="alert alert-mini alert-danger margin-bottom-30"></div>
                    }
                    <input asp-for="Input.Code" type="hidden" />
                    <div class="form-group mb-lg">
                        <label>Usuário</label>
                        <div class="input-group input-group-icon">
                            <input asp-for="Input.Email" type="text" class="form-control form-control-lg"/>
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-lg">
                        <div class="clearfix">
                            <label class="pull-left">Nova Senha</label>
                        </div>
                        <div class="input-group input-group-icon">
                            <input asp-for="Input.Password" type="password" class="form-control form-control-lg"/>
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-lg">
                        <div class="clearfix">
                            <label class="pull-left">Confirmar Senha</label>
                        </div>
                        <div class="input-group input-group-icon">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <a class="btn btn-danger pull-right mr-2" asp-page="./Login" style="margin-left: 5px;"><i class="fa fa-remove"></i> &nbsp;&nbsp;Cancelar</a>
                            <button type="submit" class="btn btn-success pull-right" style="margin-left: 5px;"><i class="fa fa-save"></i> &nbsp;&nbsp;Salvar</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2024. Todos os direitos reservados.</p>
    </div>
</section>

@section Scripts {
    <script src="~/assets/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/js/login.js"></script>
}