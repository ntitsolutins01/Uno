@page
@model WebApp.Areas.Identity.Pages.Account.Manage.FirstAccessPasswordConfirmationModel
@{
    ViewData["Title"] = "Confirmação Primeiro Acesso";
    Layout = "_LayoutLogin";
}
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="~/assets/images/logo.png" height="94" alt="Library SoftDesign" />
        </a>
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Confirmação Primeiro Acesso</h2>
            </div>
            <div class="panel-body">
                <div class="alert alert-success">
                    <p class="m-0">Senha alterada com sucesso. Por favor <a asp-page="./Login">Clique aqui para efetuar login</a>.</p>
                </div>
            </div>
        </div>
        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2024. Todos os direitos reservados.</p>
    </div>
</section>