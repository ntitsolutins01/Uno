@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Algo deu Errado.</h1>
<h2 class="text-danger">Ocorreu um erro ao processar sua solicitação.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
    <p>
        <strong>Mensagem:</strong> <code>@Model.Message</code>
    </p>
    <p>
        <strong>StackTrace:</strong> <code>@Model.StackTrace</code>
    </p>
}